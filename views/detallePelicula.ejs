</div>

<!-- codigo para resenas  -->
   <h2>Escriba tus resenas:</h2> 
    <form action="/resena/:id" method="post">
        <label>Email:</label>
        <input type="email" placeholder="mimail@mail.com" name="email" required="required">
      <!-- <%if(error) { %> 
             <p>Email incorrecto</p>
           <% }%>  -->
        <br>

        <label>Contrasena:</label>
        <input type="text" placeholder="password123" name="password">
        <br>

        <label>Resena:</label>
        <input type="text" placeholder="Tremenda pelicula!" name="texto_reseno">
        <br>

        <label>Puntaje:</label>
        <input type="integer" name="puntaje">
        <!-- aca placeholder? -->
        <br>

        <br><br>
        <button type="submit" value="submit" name="submit">Guardar</button>

    </form>

    <!-- fin de codigo para resenas -->


<!-- codigo de listado de resenas -->
<h2>Resenas:</h2>
<ul>
  <% for(let i=0; i<listaResenas.length; i++){ %>
    <li>
         <p>Resena: <%= listaResenas[i].texto_resena %></p> 
         <p>Usuario: <%= listaResenas[i].usuarios.nombre_usuario %></p>
         <p>Puntaje: <%= listaResenas[i].puntaje %></p>
        <!-- <p>Fecha Actualizacion: <%= listaResenas[i].fecha_actualizacion %></p> 
        <p>Fecha Creacion: <%= listaResenas[i].fecha_creacion %></p>  -->
         <!-- como hacer para esto?? -->
          

    </li>
 <% } %> 
</ul>    


